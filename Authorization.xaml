<Window x:Class="Don_tKnowHowToNameThis.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Don_tKnowHowToNameThis"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="login" HorizontalAlignment="Left" Margin="150,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Margin="150,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="authoBut" Content="Button" HorizontalAlignment="Left" Margin="350,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.101,-0.624" Click="Button_Click"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="150,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="150,70,0,0" VerticalAlignment="Top"/>
        <Label x:Name="errText" Content="" HorizontalAlignment="Left" Margin="244,126,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
